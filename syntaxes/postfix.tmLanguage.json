{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Postfix",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.postfix",
				"match": "\\b(if|loop|for|cond|cond-fun|breakif|fun|lam|!)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.postfix",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.postfix",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "punctuation.definition.comment.postfix",
			"begin": "#",
			"end": "\n",
			"patters": [
				{
					"name": "",
					"match": "\\\\."
				}
			]
		},
		"commentblock": {
			"name": "comment.block.postfix",
			"begin": "#<",
			"end": ">#",
			"patters": [
				{
					"name": "",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pf"
}